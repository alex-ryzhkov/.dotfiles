# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "disk /"
#order += "disk /home/yoba/extra"
#order += "cpu_usage"
#order += "cpu_temperature 0"
order += "volume master"
#order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
#order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "WiFi"
        format_down = "WiFi"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E"
        format_down = "E"
}

tztime local {
        format = "%d-%m-%Y %H:%M"
}

load {
        format = "%1min %5min %15min"
}

disk "/" {
        format = "%avail"
}
disk "/home/yoba/extra" {
        format = "%avail"
}

cpu_temperature 0 {
        format = "%degrees°C"
}

cpu_usage {
        format = "%usage"
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

