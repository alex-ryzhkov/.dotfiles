set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set scroll-step 160
#enable system-wide clipboard
set selection-clipboard clipboard
#contract $HOME to '~'
set window-title-home-tilde true
set statusbar-home-tilde true

map u scroll half-up
map [fullscreen] u scroll full-up
map d scroll full-down
map [fullscreen] d scroll full-down
map D toggle_page_mode
map [fullscreen] D toggle_page_mode
map r reload
map [fullscreen] r reload
map R rotate
map [fullscreen] R rotate
map K zoom in
map [fullscreen] K zoom in
map J zoom out
map [fullscreen] J zoom out
map i recolor
map [fullscreen] i recolor
map p print
map [fullscreen] p print
map b   navigate previous
map [fullscreen] b   navigate previous
map <Space> navigate next
map [fullscreen] <Space> navigate next
map j scroll down
map [fullscreen] j scroll down
map k scroll up
map [fullscreen] k scroll up
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
